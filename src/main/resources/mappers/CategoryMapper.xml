<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.example.quiz.mapper.CategoryMapper">
    <!-- 全カテゴリ取得 -->
    <select id="findAll" resultType="com.example.quiz.model.Category">
        SELECT * FROM categories ORDER BY id
    </select>

    <!-- IDでカテゴリ取得 -->
    <select id="findById" parameterType="Integer" resultType="com.example.quiz.model.Category">
        SELECT * FROM categories WHERE id = #{id}
    </select>
</mapper>